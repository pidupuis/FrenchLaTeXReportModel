%% Informations générales
\NeedsTeXFormat{LaTeX2e}[1999/01/01]
\ProvidesPackage{sourcecode}[2013]

%% Chargement des extensions
\RequirePackage{color}
\RequirePackage{listings}
\RequirePackage{courier} % Courrier font for source code

%% Déclaration des options
\DeclareOption*{}%% Ne rien faire quand une option est inconnue
\ProcessOptions

%% Définition des commandes
% Colors
\definecolor{colKeys}{RGB}{0,51,153}
\definecolor{colIdentifier}{rgb}{0,0,0} % En "rgb", les valeurs sont comprises entre 0 et 1.
\definecolor{colComments}{RGB}{20,148,20} % En "RGB", les valeurs sont comprises entre 0 et 255.
\definecolor{colString}{RGB}{133,6,6}
\definecolor{colfont}{RGB}{239,239,239}

% Displaying specifications
\lstset{basicstyle=\scriptsize, % Change la taille du code.
		identifierstyle=\textbf{\color{colIdentifier}}, % Couleur des variables.
		keywordstyle=\color{colKeys}, % Couleur des des fonctions.
		stringstyle=\color{colString}, % Couleur des chaines de caractères.
		commentstyle=\color{colComments}, % Couleur des commentaires.
		columns=flexible, % Rend les colonnes flexibles.
		captionpos=b,% Place la légende en bas (bottom).
		numbers=left, % Affiche les numéros de ligne.
		numberstyle=\scriptsize, % Change la taille des numéros de ligne.
		showspaces=false, % Retire les underscores marquant les espaces dans les commentaires.
		showstringspaces=false, % Retire les underscores marquant les espaces dans les strings.
		frame=single, % Ajoute un cadre autour du code.
		tabsize=2, % Modifie la taille des tabulations.
		breaklines=true, % Fais automatiquement des retour à la ligne.
		basicstyle=\ttfamily,
		breakatwhitespace=false, % Pas de break quand espaces blancs.
		xrightmargin=1cm, % Marge à droite.
		xleftmargin=1cm, % Marge à gauche.
		backgroundcolor=\color{colfont} % Couleur de font.
}

%% Fin du package
\endinput
